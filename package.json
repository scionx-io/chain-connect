{
  "name": "@scionx/chain-connect",
  "version": "2.0.0",
  "description": "Multi-chain wallet connector supporting Ethereum, Solana, and Tron with minimalist Swiss design",
  "type": "module",
  "main": "./dist/chain-connect.js",
  "module": "./dist/chain-connect.es.js",
  "browser": "./dist/chain-connect.umd.js",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/chain-connect.es.js",
      "require": "./dist/chain-connect.js"
    },
    "./style": "./dist/chain-connect.css",
    "./chain-connect.css": "./dist/chain-connect.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:clean": "rm -rf dist && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/controllers/ src/core/ src/utils/ src/index.js --ext .js",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:format": "prettier --write .",
    "clean": "rm -rf node_modules dist coverage",
    "prepublishOnly": "npm run test && npm run build",
    "package": "vite build && npm pack",
    "example": "vite build && npm pack && cd example && npm install"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "@solana/web3.js": "^1.98.4",
    "@tronweb3/tronwallet-adapters": "^1.2.14",
    "ethers": "^6.15.0",
    "mipd": "^0.0.7",
    "uhtml": "^5.0.9"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "ethereum",
    "solana",
    "tron",
    "wallet",
    "web3",
    "blockchain",
    "multi-chain",
    "crypto",
    "dapp",
    "connector"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/scionx/chain-connect.git"
  },
  "bugs": {
    "url": "https://github.com/scionx/chain-connect/issues"
  },
  "homepage": "https://github.com/scionx/chain-connect#readme"
}
